{
  "version": 2,
  "installCommand": "npm install --legacy-peer-deps",
  "builds": [
    {
      "src": "index.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": [
          "app.js",
          "routes/**",
          "config/**",
          "node_modules/**"
        ]
      }
    },
    {
      "src": "src/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    { 
      "src": "/api/(.*)",
      "dest": "index.js",
      "methods": ["GET", "POST", "PUT", "DELETE", "OPTIONS"]
    },
    { 
      "src": "/(.*)", 
      "dest": "/",
      "headers": {
        "Cache-Control": "no-cache"
      }
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}